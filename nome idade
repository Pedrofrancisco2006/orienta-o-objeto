

class Pessoa:
    def __init__(self, nome, idade):
        self.nome = nome
        self.idade = idade
        
    def exibir(self):
        print(f"Ola sou {self.nome} e tenho {self.idade} anos ")
    


nome = (input('Digite um nome: '))
idade = int(input('Digite uma idade: '))
pessoa = Pessoa( nome , idade )
pessoa.exibir()
